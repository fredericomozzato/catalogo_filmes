<h1>Filmes</h1>

<h3><%= link_to("Cadastrar novo filme", new_movie_path) %></h3>

<ul>
  <% @movies.each do |movie| %>
    <li>
      <%= link_to("#{movie.title} (#{movie.year})", movie_path(movie))  %>
    </li>
    <% if movie.image.attached? %>
      <%= image_tag(movie.image_as_icon) %> <br>
    <% end %>
  <% end %>
</ul>

<h3>Não lançados</h3>
<ul>
  <% @unreleased.each do |movie| %>
    <li>
      <%= link_to("#{movie.title} (#{movie.year})", movie_path(movie)) %>
    </li>
  <% end %>
</ul>