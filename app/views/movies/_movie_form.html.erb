<%= form_with(model: movie) do |f| %>
  <div>
    <%= f.label(:title, "Título: ") %>
    <%= f.text_field(:title) %>
  </div>
  <div>
    <%= f.label(:synopsis, "Sinopse") %>
    <%= f.text_area(:synopsis) %>
  </div>
  <div>
    <%= f.label(:country_of_origin, "País de origem: ") %>
    <%= f.text_field(:country_of_origin) %>
  </div>
  <div>
    <%= f.label(:year, "Ano de lançamento: ") %>
    <%= f.number_field(:year) %>
  </div>
  <div>
    <%= f.label(:duration, "Duração: ") %>
    <%= f.number_field(:duration) %>
  </div>
  <div>
    <%= f.label(:director_id, "Diretor") %>
    <%= f.collection_select(:director_id, Director.all.order(:name), :id, :name) %>
  </div>
  <div>
    <%= f.label(:genre_id, "Gênero: ") %>
    <%= f.collection_select(:genre_id, Genre.all.order(:name), :id, :name) %>
  </div>
  <div>
    <%= f.label(:released, "Lançado: ") %>
    <%= f.check_box(:released) %>
  </div>
  <div>
    <%= f.label(:image, "Adicionar poster: ") %>
    <%= f.file_field(:image) %>
  </div>
  <div>
    <% if movie.image.attached? %>
      <%= image_tag(movie.image_as_icon) %>
    <% end %>
  </div>
  <div>
    <%= f.submit("Salvar") %>
  </div>

<% end %>

